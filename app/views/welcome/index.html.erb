<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h1>To Do List</h1>

		<% @myuniquedates.each do |date| %>
		   <h2><%= date.strftime('%B %d, %Y') %></h2>
		   <ul>
		     <% @items.each do |item| %>
			   <% if date == item.dueby %>                     
			     <li><%= item.chore %> <%= link_to 'Done', item, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
			     	 <%= link_to 'Edit', edit_item_path(item), class: "btn btn-default" %>
			     </li>
			   <% end %>
			 <% end %>
		   </ul>  
		<% end %>
		<p align="center"><%= link_to 'New Item', new_item_path, class: "btn btn-default" %><p>
	</div>

</div>


