 /* Extra Small */
@media(max-width:767px){
 #btn-add {
  position:relative!important;
  a {
  	width: 100%!important;
  	top: 145px!important;
  	left:0!important;
  }
  a:hover {
  	-moz-transform: none!important;
    -webkit-transform: none!important;
    -o-transform: none!important;
    -ms-transform: none!important;
    transform: none!important;
  }
 }
  #todo_container {
  h1 {
 	  margin-bottom: 70px!important;
   }
  }
}

 body {
  background: url(<%= asset_path "atlanta.jpg" %>) no-repeat center center fixed; 
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
}

 li {
 	font-family: 'Amatic SC', cursive;
 	font-size: 3em;
 	margin: 20px auto;
 	list-style-type: none;
 	color: #fef;
 }

 h1 {
 	font-family: 'Amatic SC', cursive;
 	font-weight: 800;
 	font-size: 8em;
 	text-align:center;
 	color: #4a1c4d;
 }

 h2 {
 	font-family: 'Josefin Sans', sans-serif;
 	text-align: left;
 	color: #4a1c4d;
 	margin-bottom: 10px;
 	padding: 5px;
 	font-size: 1.5em;
 	border-bottom: 1px solid #4a1c4d;
 }

 #todo_container {
 	background:rgba(181,147,169,0.9);
 	-moz-box-shadow: 6px 5px 20px #77295d;
	-webkit-box-shadow: 6px 5px 20px #77295d;
	box-shadow: 6px 5px 20px #77295d;
	position:relative;
 .col-xs-1 {
 	  line-height:0.6em;
	 }
 .col-xs-11 {
	   line-height: 1em;
 	}
 }
 
a, a:visited, a:active { 
	color:#fff;
}

a:hover {
	background: none;
	text-decoration:line-through;
	color: #fff;
}

 .glyphicon-pencil, .glyphicon-pencil:visited, .glyphicon-pencil:active {
 	font-size:0.4em;
 	color: #fef;
 	line-height: 1em;
 	-webkit-transition: all 0.25s ease-in-out; /* Safari and Chrome */
    -moz-transition: all 0.25s ease-in-out; /* Firefox */
    -o-transition: all 0.25s ease-in-out; /* IE 9 */
    -ms-transition: all 0.25s ease-in-out; /* Opera */
    transition: all 0.25s ease-in-out;
 }

.glyphicon-pencil:hover {
	background:none;
	color: #fff;
	text-decoration: none;
	-moz-transform: scale(1.5);
	-webkit-transform: scale(1.5);
	-o-transform: scale(1.5);
	-ms-transform: scale(1.5);
	transform: scale(1.5);
}

.glyphicon-plus {
	font-size: 0.8em;
}

.btn {
	border-radius: 0;
}

#btn-add {
  position:absolute;
  z-index:999!important;
  top: 60px;
  right: 64px;
  a { 
  	position: fixed;
  }
  a:hover {
	-moz-transform: rotate(2deg);
    -webkit-transform: rotate(2deg);
    -o-transform: rotate(2deg);
    -ms-transform: rotate(2deg);
    transform: rotate(2deg);
  }
}

.btn {
  font-family: 'Amatic SC', cursive;
  font-size: 2em;
}
	.btn-primary {	
		background: #00988d;
		/*padding: 10px 20px;*/
		border: 1px solid #09746c;
	}

	.btn-primary:hover {
		background: #09746c;
		border: 1px solid #074b46;
	}

#error_explanation {
  padding: 7px 7px 4px;
  margin-bottom: 20px;
  background-color: #4a1c4d;
  h2 {
    text-align: left;
    padding: 15px 15px 5px;
    font-size: 1.2em;
    margin: 0;
    background-color: #4a1c4d;
    color: #fff;
    border-bottom: 1px solid #fff;
  }
  ul li {
    font-size: 2em;
    list-style: square;
    color: #fff;
  }
}
